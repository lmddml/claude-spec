  "components": {
    "schemas": {
      "Article": {
        "title": "Article",
        "x-plural": "Articles",
        "x-camel": "article",
        "x-camel-plural": "articles",
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the article",
            "readOnly": true
          },
          "name": {
            "type": "string",
            "description": "Article name"
          },
          "description": {
            "type": "string",
            "description": "Article description"
          },
          "price": {
            "type": "number",
            "minimum": 0,
            "description": "Article price"
          },
          "unitId": {
            "type": [
              "string",
              "null"
            ],
            "description": "Foreign key reference to Unit"
          },
          "unit": {
            "$ref": "#/components/schemas/Unit",
            "description": "The complete unit object",
            "readOnly": true
          },
          "sku": {
            "type": "string",
            "description": "Stock keeping unit code"
          },
          "inStock": {
            "type": "boolean",
            "description": "Whether the article is in stock",
            "default": true
          }
        },
        "required": [
          "id"
        ],
        "examples": [
          {
            "id": "art-001",
            "name": "Wireless Mouse",
            "description": "Ergonomic wireless mouse with USB receiver",
            "price": 29.99,
            "unitId": "unit-001",
            "unit": {
