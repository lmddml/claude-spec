{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Unit",
    "x-plural": "Units",
    "x-camel": "unit",
    "x-camel-plural": "units",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique identifier for the unit",
            "readOnly": true
        },
        "unitNumber": {
            "type": "string",
            "description": "Unit number or name"
        },
        "description": {
            "type": "string",
            "description": "Description of the unit"
        }
    },
    "required": ["id"],
    "examples": [
        {
            "id": "unit-001",
            "unitNumber": "pcs",
            "description": "Pieces"
        },
        {
            "id": "unit-002",
            "unitNumber": "kg",
            "description": "Kilograms"
        },
        {
            "id": "unit-003",
            "unitNumber": "ltr",
            "description": "Liters"
        },
        {
            "id": "unit-004",
            "unitNumber": "box",
            "description": "Box"
        }
    ]
}
