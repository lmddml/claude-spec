{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Article",
    "x-plural": "Articles",
    "x-camel": "article",
    "x-camel-plural": "articles",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique identifier for the article",
            "readOnly": true
        },
        "name": {
            "type": "string",
            "description": "Article name"
        },
        "price": {
            "type": "number",
            "minimum": 0,
            "description": "Article price"
        },
        "unitId": {
            "type": ["string", "null"],
            "description": "Foreign key reference to Unit"
        },
        "unit": {
            "$ref": "unit.schema.json",
            "description": "The complete unit object",
            "readOnly": true
        }
    },
    "required": ["id"]
}
